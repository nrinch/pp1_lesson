<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondImplCalculatorActivity">

    <TextView
        android:id="@+id/acs_output_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/calc_output_height_text_view"
        android:gravity="end"
        android:padding="@dimen/small_padding"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <Button
        android:id="@+id/acs_button_clear"
        style="@style/CalcButtons"
        android:layout_width="@dimen/button_clear_size"
        android:layout_height="@dimen/button_clear_size"
        android:onClick="operation"
        android:text="@string/text_button_clear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/acs_output_text_view" />

    <Button
        android:id="@+id/acs_button_number_1"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="enterNumber"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@id/acs_button_number_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/acs_button_number_2"
        app:layout_constraintTop_toBottomOf="@id/acs_button_clear" />

    <Button
        android:id="@+id/acs_button_number_2"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="enterNumber"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/acs_button_number_1"
        app:layout_constraintLeft_toRightOf="@id/acs_button_number_1"
        app:layout_constraintRight_toLeftOf="@id/acs_button_number_3"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_1" />

    <Button
        android:id="@+id/acs_button_number_3"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="enterNumber"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@id/acs_button_number_1"
        app:layout_constraintLeft_toRightOf="@id/acs_button_number_2"
        app:layout_constraintRight_toRightOf="@id/acs_border_numbers"
        app:layout_constraintTop_toBottomOf="@id/acs_button_clear"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_1" />

    <Button
        android:id="@+id/acs_button_number_4"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="enterNumber"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/acs_button_number_7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/acs_button_number_5"
        app:layout_constraintTop_toBottomOf="@id/acs_button_number_1" />

    <Button
        android:id="@+id/acs_button_number_5"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="enterNumber"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@id/acs_button_number_4"
        app:layout_constraintLeft_toRightOf="@id/acs_button_number_4"
        app:layout_constraintRight_toLeftOf="@id/acs_button_number_6"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_4" />

    <Button
        android:id="@+id/acs_button_number_6"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="enterNumber"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@id/acs_button_number_4"
        app:layout_constraintLeft_toRightOf="@id/acs_button_number_5"
        app:layout_constraintRight_toRightOf="@id/acs_border_numbers"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_4" />

    <Button
        android:id="@+id/acs_button_number_7"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="enterNumber"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@id/acs_button_number_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/acs_button_number_8"
        app:layout_constraintTop_toBottomOf="@id/acs_button_number_4" />

    <Button
        android:id="@+id/acs_button_number_8"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="enterNumber"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@id/acs_button_number_7"
        app:layout_constraintLeft_toRightOf="@id/acs_button_number_7"
        app:layout_constraintRight_toLeftOf="@id/acs_button_number_9"
        app:layout_constraintTop_toBottomOf="@id/acs_button_clear"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_7" />

    <Button
        android:id="@+id/acs_button_number_9"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="enterNumber"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@id/acs_button_number_7"
        app:layout_constraintLeft_toRightOf="@id/acs_button_number_8"
        app:layout_constraintRight_toRightOf="@id/acs_border_numbers"
        app:layout_constraintTop_toBottomOf="@id/acs_button_clear"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_7" />

    <Button
        android:id="@+id/acs_button_number_0"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/acs_button_number_7"
        app:layout_constraintRight_toRightOf="@id/acs_button_number_7"
        app:layout_constraintTop_toBottomOf="@id/acs_button_number_7" />

    <Button
        android:id="@+id/acs_button_equal"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="operation"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/acs_button_number_0"
        app:layout_constraintRight_toLeftOf="@id/acs_border_numbers"
        app:layout_constraintTop_toBottomOf="@id/acs_button_number_9" />


    <Button
        android:id="@+id/acs_button_plus"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="operation"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@id/acs_button_number_3"
        app:layout_constraintLeft_toLeftOf="@id/acs_border_numbers"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_1" />

    <Button
        android:id="@+id/acs_button_minus"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="operation"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@id/acs_button_number_6"
        app:layout_constraintLeft_toLeftOf="@id/acs_border_numbers"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_4" />

    <Button
        android:id="@+id/acs_button_mult"
        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="operation"
        android:text="*"
        app:layout_constraintBottom_toBottomOf="@id/acs_button_number_9"
        app:layout_constraintLeft_toLeftOf="@id/acs_border_numbers"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_7" />

    <Button
        android:id="@+id/acs_button_div"

        style="@style/CalcButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="operation"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/acs_border_numbers"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/acs_button_number_0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/acs_border_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/button_clear_size" />
</androidx.constraintlayout.widget.ConstraintLayout>